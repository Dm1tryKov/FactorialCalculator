<Window x:Class="FactorialCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Factorial Calculator" Height="150" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Введите число:" Margin="0 0 0 5"/>
            <TextBox x:Name="inputTextBox" Width="100" Height="25" Margin="0 0 0 5"/>
            <Button Content="Вычислить" Width="80" Height="25" Click="CalculateFactorial"/>
            <TextBlock x:Name="outputTextBlock" Margin="0 10 0 0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
